# ============================================
# Where Did I Park - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# --------------------------------------------
# Database (Neon PostgreSQL)
# --------------------------------------------
DATABASE_URL=postgres://user:password@host.neon.tech/database?sslmode=require

# --------------------------------------------
# Backend API
# --------------------------------------------
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# CORS - comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173

# --------------------------------------------
# Google OAuth
# --------------------------------------------
# Get these from Google Cloud Console:
# 1. Go to https://console.cloud.google.com
# 2. Create a new project (or select existing)
# 3. Enable "Google+ API" or "People API"
# 4. Go to APIs & Services > Credentials
# 5. Create OAuth 2.0 Client ID (Web application)
# 6. Add authorized redirect URIs:
#    - http://localhost:3001/v1/auth/google/callback (development)
#    - https://api.yourdomain.com/v1/auth/google/callback (production)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# --------------------------------------------
# JWT Secrets (min 32 characters each)
# --------------------------------------------
# Generate with: openssl rand -base64 32
JWT_ACCESS_SECRET=your-access-secret-at-least-32-characters-long
JWT_REFRESH_SECRET=your-refresh-secret-at-least-32-characters-long

# --------------------------------------------
# Frontend URL (used for generating share links)
# --------------------------------------------
# IMPORTANT: Set this in production to your actual frontend domain!
# Example: https://wheredidipark.app
FRONTEND_URL=http://localhost:5173

# --------------------------------------------
# Frontend (Vite - must be prefixed with VITE_)
# --------------------------------------------
VITE_API_URL=http://localhost:3001
VITE_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# --------------------------------------------
# Cloudflare R2 (Photo Storage)
# --------------------------------------------
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=where-did-i-park-photos
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev

# --------------------------------------------
# OpenCage Geocoding API
# --------------------------------------------
# Get your API key from https://opencagedata.com/
# Free tier: 2,500 requests/day
# Used for manual address entry geocoding
OPENCAGE_API_KEY=your-opencage-api-key
